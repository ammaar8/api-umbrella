#!/usr/bin/env bash

set -e -u -x
source ./tasks/helpers.sh

glauth_version="2.4.0"
glauth_hash="bb74391703486d9bea166b0add57993731526f8913f50483aa6a8da09c4108b4"
if [ "$TARGETARCH" == "arm64" ]; then
  glauth_hash="23bdea005819e75521df144a872b24eafcd14c47b7577cd54822f2da8b9a760e"
fi

task_working_dir
download "https://github.com/glauth/glauth/releases/download/v$glauth_version/glauth-linux-${TARGETARCH}" "sha256" "$glauth_hash"

install -D -m 755 "_persist/downloads/glauth-linux-${TARGETARCH}" "$TEST_INSTALL_PREFIX/bin/glauth"

stamp
