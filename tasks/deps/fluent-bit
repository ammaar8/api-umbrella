  -DFLB_FILTER_MODIFY="On" \
  -DFLB_FILTER_MULTILINE="Off" \
  -DFLB_FILTER_NEST="Off" \
  -DFLB_FILTER_NIGHTFALL="Off" \
  -DFLB_FILTER_PARSER="Off" \
  -DFLB_FILTER_RECORD_MODIFIER="Off" \
